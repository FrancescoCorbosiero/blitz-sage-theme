# Blitz Theme Configuration
# Copy this file to .env and configure for your environment

# WordPress Configuration
WP_HOME=http://localhost
WP_SITEURL=${WP_HOME}/wp

# Theme Settings
THEME_NAME=Blitz
THEME_VERSION=1.0.0
THEME_DEBUG=false

# Performance
ENABLE_CACHING=true
CACHE_LIFETIME=3600
ENABLE_MINIFICATION=true

# Features
ENABLE_SERVICE_WORKER=true
ENABLE_SPECULATION_RULES=true
ENABLE_VIEW_TRANSITIONS=true
ENABLE_WEB_VITALS=true
ENABLE_DARK_MODE=true

# Analytics (optional)
GA_TRACKING_ID=
GTM_CONTAINER_ID=

# Social Media (optional)
FACEBOOK_URL=
TWITTER_URL=
INSTAGRAM_URL=
LINKEDIN_URL=

# Contact Information
CONTACT_EMAIL=info@example.com
CONTACT_PHONE=
WHATSAPP_NUMBER=

# API Keys (optional)
GOOGLE_MAPS_API_KEY=
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Development
VITE_DEV_SERVER_URL=http://localhost:3000