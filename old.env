# WordPress Configuration
WP_HOME=http://localhost/blitz-theme
WP_SITEURL=${WP_HOME}
APP_URL=${WP_HOME}

# Environment
APP_ENV=development
APP_DEBUG=true

# Theme Settings
THEME_NAME="Blitz"
THEME_VERSION="1.0.0"

# Build Settings
VITE_BASE_URL=/app/themes/blitz-theme/public/build/
VITE_HOST=localhost
VITE_PORT=3000

# API Keys (Optional)
GOOGLE_MAPS_API_KEY=
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=
FACEBOOK_PIXEL_ID=
HOTJAR_ID=
CLARITY_ID=

# Mail Configuration (Optional)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${THEME_NAME}"

# Cache Configuration
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Security
SECURE_COOKIES=false
SESSION_SECURE_COOKIE=false

# Performance
ASSET_VERSION=true
MINIFY_HTML=false

# Development Tools
QUERY_MONITOR=true
DEBUG_BAR=false