{
  "name": "roots/blitz",
  "type": "wordpress-theme",
  "license": "MIT",
  "description": "Blitz - A modern, high-performance WordPress theme built with Sage 10, Laravel, and Tailwind CSS",
  "homepage": "https://roots.io/sage/",
  "authors": [
    {
      "name": "Roots",
      "email": "team@roots.io",
      "homepage": "https://roots.io"
    }
  ],
  "keywords": [
    "wordpress",
    "theme",
    "sage",
    "tailwind",
    "laravel",
    "blitz"
  ],
  "support": {
    "issues": "https://github.com/roots/sage/issues",
    "forum": "https://discourse.roots.io/"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "require": {
    "php": "^8.2",
    "composer/installers": "^2.0",
    "roots/acorn": "^4.3",
    "roots/acorn-prettify": "^1.0",
    "spatie/laravel-html": "^3.11",
    "log1x/navi": "^2.0",
    "log1x/sage-directives": "^2.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.10",
    "laravel/pint": "^1.13",
    "filp/whoops": "^2.15"
  },
  "suggest": {
    "log1x/acf-composer": "Compose ACF Fields and Blocks from Sage",
    "log1x/sage-svg": "SVG directive for Sage",
    "log1x/poet": "Configuration-based post types and taxonomies",
    "stoutlogic/acf-builder": "Fluent ACF field group builder"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-plugin-installer": true
    },
    "platform": {
      "php": "8.2"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "lint": "phpcs --extensions=php --standard=PSR12 app",
    "fix": "phpcbf --extensions=php --standard=PSR12 app",
    "format": "pint",
    "analyze": "phpstan analyse app --level=5",
    "test": "phpunit",
    "post-install-cmd": [
      "Roots\\Acorn\\ComposerScripts::postInstall"
    ],
    "post-update-cmd": [
      "Roots\\Acorn\\ComposerScripts::postUpdate"
    ],
    "post-autoload-dump": [
      "Roots\\Acorn\\ComposerScripts::postAutoloadDump"
    ]
  },
  "extra": {
    "installer-paths": {
      "../../mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "../../plugins/{$name}/": ["type:wordpress-plugin"],
      "../../themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "../../wp",
    "acorn": {
      "providers": [
        "App\\Providers\\ThemeServiceProvider"
      ]
    }
  }
}